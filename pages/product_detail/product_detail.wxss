page{
  height: 100%;
  background: #f3f5f7;
  overflow-y: auto;
  padding-bottom:120rpx;
}
.pro_number{
  position: absolute;
  left: 30rpx;
  bottom: 20rpx;
}
.dots{
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
}
.bto-bar{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.date-box{
  height: 200rpx;
  padding-right: 20rpx;
}
.date-item{
  height: 86rpx;
  padding:0 20rpx;
  
}
.salary_text{
  text-align: left;
  line-height: 50rpx;
}

.proDay{
  padding: 20rpx 30rpx 30rpx 30rpx;
}
.proDayItem{
  position: relative;
  display: flex;
  padding: 0 12rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
  font-size: 26rpx;
  line-height: 36rpx;
}
.node_img{
  height: 37rpx;
  width: 37rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}
.proDayItem::after{
  content: "";
  position: absolute;
  height: calc( 100% - 35rpx);
  width: 1rpx;
  left: 29rpx;
  background: #7377FF;
  top:35rpx;
}
.proDayItem_init::after{
  content: "";
  position: absolute;
  height: calc( 100% - 6rpx) !important;
  width: 1rpx;
  left: 29rpx;
  background: #7377FF;
  top:35rpx;
}
.node_con{
  display: flex;
  flex-direction: column;
  width: 100%;
  /* width: calc(100% - 100rpx); */
}
.tag {
    width: 140px;
    height: 25px;
    top: 10px;
    right: -50px;
    text-align: center;
    line-height: 25px;
    transform: rotate(45deg);
    position: absolute;
    color: white;
    background: #7377FF;
}
.scenery{
  text-align: center;
  margin:30rpx 0 20rpx 0;
}
.node_title{
  font-size: 30rpx;
  color: black;
}
.scenery_intro{
  text-align: justify;
  line-height:48rpx;
}
.tag{
  position: relative;
  font-size: 18rpx;
  padding: 2rpx 6rpx;
  color: #707070;
}
.tag::after{
  content: "  ";
  position: absolute;
  left: 0;
  top: 0;
  border-radius: 28rpx;
  width: 400%;
  height:400%;
  border:1px solid #707070;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scale(.5, .5);
  transform: scale(.25, .25);
}
.mobile,.id_card{

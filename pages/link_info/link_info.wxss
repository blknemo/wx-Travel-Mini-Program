page{
  background: #F7F5F7;
}
.search_tab{
  display: flex;
  justify-content: space-around;
  align-items: center;
  height : 82rpx;
  border-bottom: 1rpx solid #F9F9F9;
  font-size: 28rpx;
  color: gray;
  background: white;
}
.search_tab span{
  position: relative;
  padding: 15rpx 30rpx;
}
.active_tab{
  color: black;
}
.active_tab::after{
  content: "";
  position: absolute;
  height: 4rpx;
  background-color: #7377FF;
  left: calc(50% - 18rpx);
  width: 36rpx;
  bottom: -2rpx;
  border-radius: 40rpx;
}
.box{
  box-sizing: border-box;
  margin-top: 15rpx;
  padding: 15rpx;
}
.tab_card{
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: white;
  padding: 20rpx 0 ;
  font-size: 28rpx;
  border-radius: 6rpx;
  color: #7377FF;
  margin-bottom: 20rpx;
}
.tab_card_item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.icon{
  height: 54rpx;
  width: 54rpx;
}
.tab_card_sl{
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  padding: 20rpx 0 ;
  font-size: 28rpx;
  border-radius: 6rpx;
  color: #7377FF;
  margin-bottom: 20rpx;
}
.p_item{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
  border-radius: 6rpx;
  background: white;
  font-size: 28rpx;
}
.del_icon{
  position: absolute;
  top: calc(50% - 20rpx);
  right: 25rpx;
  height: 40rpx;
  width: 40rpx;
}

page{
  height: 100%;
}
.header{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 240rpx;
  background: linear-gradient(to Bottom,  #7377FF,#A279FD);
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 60rpx;
  border:4rpx solid white;
}
.rec_btn{
  position: relative;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  color: white;
  font-size: 28rpx;
  font-style: oblique;
  background: #A279FD;
  padding: 4rpx 36rpx 8rpx 26rpx; 
  
}
.rec_btn::after{
  position: absolute;
  content: '';
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  border-top: 4rpx solid white;
  border-right: 4rpx solid white;
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
  top: 18rpx;
  right: 10rpx;
}
.pay_tab{
  top:-94rpx;
  left:0;
  
}
.pay_tab>.cu-item{
  border-radius: 14rpx !important;
  margin:0 30rpx !important;
  margin-bottom: 20rpx !important;
}

.right_xian{
  height: 40rpx;
  width: 2rpx;
  background: #cdcdcd;
  transform: scale(0.3,1);
}